{
  "name": "pinterest",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-server": "^2.6.8",
    "graphql": "^14.4.2",
    "graphql-import": "^0.7.1",
    "knex": "^0.18.3",
    "pg": "^7.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,ts,tsx}": [
        "prettier --write",
        "git add"
      ]
    },
    "concurrent": true,
    "ignore": [
      "build/**/*.*",
      "coverage/**/*.*",
      "node_modules/**/*.*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
